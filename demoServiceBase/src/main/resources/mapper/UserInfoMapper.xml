    <select id="getUserInfoByUserCode" resultType="model.UserInfoDto">
        SELECT  a.user_id, a.user_state, a.user_name, a.user_code, a.user_pass
        FROM user_info a
        where a.user_state = 'A'
        and a.user_code = #{userCode}
    </select>
</mapper>